<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            app:cardPreventCornerOverlap="false"
            android:layout_marginLeft="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/shareButton">
                        <LinearLayout
                            android:layout_width="39dp"
                            android:layout_height="45dp">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:id="@+id/username"
                                android:clickable="true"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:textColor="@color/colorPrimaryText" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Timestamp"
                                android:textSize="12dp"
                                android:id="@+id/timeStamp"
                                android:textColor="@color/colorTertiaryText"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/shareButton"
                        android:clickable="true"
                        android:background="@drawable/share_button_background"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_black_24dp"
                            android:tintMode="multiply"
                            android:tint="@color/colorPrimaryText"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/colorPrimaryText"
                            android:text="Share"/>
                    </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/status"
                            android:visibility="visible"
                            android:text="We can make a big changes by our small acts. To conserve the environment start changing small things. Use eco friendly products and keep our envronment clean."
                            android:textColor="@color/colorPrimaryText" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/status"
                            android:text="Link: www.google.com"
                            android:id="@+id/link"
                            android:autoLink="web"
                            android:textColor="@color/colorPrimary"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageLayout"
                    android:visibility="gone"
                    android:paddingBottom="15dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="#E0E0E0"
                        android:id="@+id/image"
                        android:visibility="visible"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:clickable="true" />
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/ImageProgress"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notificationLayout"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:layout_marginBottom="15dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quickbloodPic"
                        android:alpha="0.5"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:layout_alignTop="@+id/layout1"
                        android:layout_alignBottom="@+id/layout3"
                        android:src="#000000" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/layout1"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/profile_pic1"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="QuickBlood "
                                    android:textSize="20dp"
                                    android:textColor="@color/colorPrimary" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blood Request"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorPrimary" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Timestamp"
                                android:textSize="12dp"
                                android:id="@+id/timestamp_textview"
                                android:textColor="@color/colorSecondaryText"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:id="@+id/layout2"
                        android:layout_below="@id/layout1"
                        android:background="@drawable/notification_background"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon1"
                                    android:layout_toStartOf="@+id/colon1"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Name"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon1"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/name_textview"
                                android:text="Falalu Rahman"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon2"
                                    android:layout_toStartOf="@+id/colon2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Blood Group"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon2"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/bloodgroup_textview"
                                android:text="B +ve"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon3"
                                    android:layout_toStartOf="@+id/colon3"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="District"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon3"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/district_textview"
                                android:text="Malappuram"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:id="@+id/address_layout"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon7"
                                    android:layout_toStartOf="@+id/colon7"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Address"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon7"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/address_textview"
                                android:text="Malappuram"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon4"
                                    android:layout_toStartOf="@+id/colon4"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Quantity"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon4"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/quantity_textview"
                                    android:text="12"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" Units"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="13dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon5"
                                    android:layout_toStartOf="@+id/colon5"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Phone Number"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon5"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/phonenumber_textview"
                                android:text="9562613599"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:id="@+id/email_layout"
                            android:paddingRight="2dp"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/colon6"
                                    android:layout_toStartOf="@+id/colon6"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:text="Email"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/colon6"
                                    android:layout_centerVertical="true"
                                    android:text=": "
                                    android:textColor="@color/colorPrimaryText"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/email_textview"
                                android:text="meet.falalu@gmail.com"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:id="@+id/layout3"
                        android:layout_below="@+id/layout2"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='"Donate Blood, Save Lives"'
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:src="#000000"
        android:layout_marginLeft="3dp"
        android:id="@+id/profile_pic"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"/>
</RelativeLayout>