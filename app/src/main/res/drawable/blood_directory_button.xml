<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#909090"/>
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e0e0e0"
                android:endColor="#909090"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#909090" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>