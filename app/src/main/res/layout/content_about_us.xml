<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tathva.falalurahman.quickblood.AboutUsActivity"
    tools:showIn="@layout/app_bar_about_us">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Tathva '16"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:textColor="@color/colorPrimaryText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="For us NITCians, Aavishkaar, the social initiative of Tathva 16, has always been an opportunity to realize our dreams for a brighter future. A future without poverty. Without catastrophes. It gives us the chance to bring out the social servant in all of us and use the skills and knowledge acquired from our time as engineering students,  to serve the society and those in need of a helping hand. With this blood donation app, we aim to provide a platform for donors and patients alike, to put an end to last minute rushes in life or death situations. Maybe a day will come, when we will have to go through no hassles whatsoever to find donors in times of need. But until then, let us do our bit to create a safe and secure future for the world around us."
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/colorSecondaryText"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
