<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tathva.falalurahman.quickblood.HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefresh">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newsfeed"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:paddingBottom="53dp"
            android:paddingTop="12dp"
            android:clipToPadding="false"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/footer"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/footer_button_background"
            android:layout_weight="1">
            <com.tathva.falalurahman.quickblood.TintableImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:id="@+id/bloodDonorButton"
                android:padding="5dp"
                android:src="@drawable/blood_donors"
                app:tint="@color/tintable_imageview_foreground"
                android:clickable="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/footer_button_background"
            android:layout_weight="1">
            <com.tathva.falalurahman.quickblood.TintableImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:id="@+id/bloodDirectoryButton"
                android:padding="5dp"
                android:src="@drawable/ic_people_black_36dp"
                app:tint="@color/tintable_imageview_foreground"
                android:clickable="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/footer_button_background"
            android:layout_weight="1">
            <com.tathva.falalurahman.quickblood.TintableImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:id="@+id/bloodRequestButton"
                android:padding="5dp"
                android:src="@drawable/blood_request"
                app:tint="@color/tintable_imageview_foreground"
                android:clickable="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/footer_button_background"
            android:layout_weight="1">
            <com.tathva.falalurahman.quickblood.TintableImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:id="@+id/notificationButton"
                android:src="@drawable/ic_notifications_black_36dp"
                app:tint="@color/tintable_imageview_foreground"
                android:clickable="true"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/notification_badge"
                android:layout_alignTop="@+id/notificationButton"
                android:layout_alignRight="@+id/notificationButton"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/badge_shape"
                android:textColor="#FFFFFF"
                android:text="10"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textStyle="bold"
                android:textSize="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/footer_button_background"
            android:layout_weight="1">
            <com.tathva.falalurahman.quickblood.TintableImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:id="@+id/aboutUsButton"
                android:padding="5dp"
                android:src="@drawable/ic_info_outline_black_36dp"
                app:tint="@color/tintable_imageview_foreground"
                android:clickable="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
