<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="#F5F5F5"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Link"
                android:textSize="21dp"
                android:textStyle="bold"
                android:id="@+id/DialogTitle"
                android:typeface="sans"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorPrimaryText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogTitle"
                android:layout_marginTop="10dp"
                android:text="Enter the address to the website, online page you want to add:"
                android:textSize="15dp"
                android:id="@+id/DialogMessage"
                android:typeface="sans"
                android:textColor="@color/colorSecondaryText"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DialogLink"
                android:layout_below="@id/DialogMessage"
                android:hint="Enter link..."
                android:textSize="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#F5F5F5"
                android:layout_marginTop="12dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogLink"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Cancel"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/Add"
                    android:text="CANCEL"
                    android:typeface="sans"
                    android:textSize="13dp"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/dialog_buttons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:id="@+id/Add"
                    android:clickable="true"
                    android:text="ADD"
                    android:typeface="sans"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/dialog_buttons" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>