<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tathva.falalurahman.quickblood.BloodDetails"
    tools:showIn="@layout/activity_blood_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/new_request"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Blood Request Details"
                    android:layout_gravity="center"
                    android:id="@+id/textView2"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimaryText" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/name_edit_text"
                    android:layout_alignTop="@+id/name_edit_text"
                    android:id="@+id/namePic"
                    android:src="@drawable/ic_person_black_36dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/name_edit_text"
                    android:hint="Name"
                    android:layout_toRightOf="@+id/namePic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:nextFocusDown="@+id/phone_number_edit_text"
                    android:imeOptions="actionNext"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="4"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="@color/colorAccent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/phone_number_edit_text"
                    android:layout_alignTop="@+id/phone_number_edit_text"
                    android:id="@+id/phonePic"
                    android:src="@drawable/ic_phone_android_black_36dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:id="@+id/phone_number_edit_text"
                    android:hint="Phone Number"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="10"
                    app:met_maxCharacters="10"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_errorColor="@color/colorAccent"
                    android:layout_toRightOf="@+id/phonePic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:nextFocusDown="@+id/email_edit_text"
                    android:imeOptions="actionNext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/email_edit_text"
                    android:layout_alignTop="@+id/email_edit_text"
                    android:id="@+id/emailPic"
                    android:src="@drawable/ic_mail_outline_black_36dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:inputType="textEmailAddress"
                    android:id="@+id/email_edit_text"
                    android:hint="Email Address"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_errorColor="@color/colorAccent"
                    android:layout_toRightOf="@+id/emailPic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:nextFocusDown="@+id/blood_group_spinner"
                    android:imeOptions="actionNext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/blood_group_spinner"
                    android:layout_alignTop="@+id/blood_group_spinner"
                    android:id="@+id/bloodPic"
                    android:src="@drawable/blood"/>
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/blood_group_spinner"
                    android:layout_marginTop="5dp"
                    android:hint="Blood Group"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_errorColor="@color/colorAccent"
                    android:layout_toRightOf="@+id/bloodPic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:nextFocusDown="@+id/district_spinner"
                    android:imeOptions="actionNext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/district_spinner"
                    android:layout_alignTop="@+id/district_spinner"
                    android:id="@+id/districtPic"
                    android:src="@drawable/ic_location_on_black_36dp"/>
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/district_spinner"
                    android:layout_marginTop="5dp"
                    android:hint="District"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_errorColor="@color/colorAccent"
                    android:layout_toRightOf="@+id/districtPic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:nextFocusDown="@+id/address_edit_text"
                    android:imeOptions="actionNext"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/addressPic"
                    android:src="@drawable/ic_directions_black_36dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/address_edit_text"
                    android:hint="Address"
                    android:layout_toRightOf="@+id/addressPic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:nextFocusDown="@+id/quantity_edit_text"
                    android:imeOptions="actionNext"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="@color/colorAccent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/quantity_edit_text"
                    android:layout_alignTop="@+id/quantity_edit_text"
                    android:id="@+id/quantityPic"
                    android:src="@drawable/weight"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:id="@+id/quantity_edit_text"
                    android:hint="Quantity"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="1"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimaryDark"
                    app:met_errorColor="@color/colorAccent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/unit"
                    android:layout_toRightOf="@+id/quantityPic"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/details_edit_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Units"
                    android:textSize="30dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/unit"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/detailsPic"
                    android:src="@drawable/ic_directions_black_36dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/details_edit_text"
                    android:hint="Other Details"
                    android:layout_toRightOf="@+id/detailsPic"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:imeOptions="actionDone"
                    app:met_floatingLabel="highlight"
                    app:met_baseColor="@color/colorPrimary"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_errorColor="@color/colorAccent" />
            </RelativeLayout>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="Submit"
                android:textColor="@color/colorTextOnButton"
                android:id="@+id/sign_up_button"
                android:background="@drawable/button_background"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
